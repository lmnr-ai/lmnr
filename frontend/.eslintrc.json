{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "ignorePatterns": [
    "lib/semantic-search/generated/**/*.js",
    "lib/semantic-search/generated/**/*.mjs"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "no-duplicate-imports": [
      "error"
    ],
    "unused-imports/no-unused-imports": [
      "error"
    ],
    "sort-imports": [
      "warn",
      {
        "ignoreCase": true,
        "allowSeparatedGroups": false
      }
    ]
  },
  "plugins": [
    "unused-imports"
  ]
}